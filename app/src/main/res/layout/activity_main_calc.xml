<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainCalc">

  <android.support.constraint.ConstraintLayout
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          xmlns:app="http://schemas.android.com/apk/res-auto"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:context=".MainCalc">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="vertical"
    >
      <ImageView
              android:layout_width="match_parent"
              android:layout_height="70dp" app:srcCompat="@drawable/univesp_logo"
              android:contentDescription="@string/univesp_logo"/>
      <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="?android:attr/listDivider"
      />
      <TableLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:paddingTop="5dp">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical" android:gravity="center_vertical|center_horizontal"
        >
          <TextView
                  android:text="@string/atividades_feitas"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:textStyle="bold"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center_vertical|center_horizontal"
                  android:orientation="vertical">
          <RadioGroup
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" android:id="@+id/radioGroupAtvFeitas"
                  android:checkedButton="@+id/radioAtvFeitas1">
            <RadioButton
                    android:text="@string/atv_feita_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioAtvFeitas1"
                    android:layout_weight="1"/>
            <RadioButton
                    android:text="@string/atv_feita_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioAtvFeitas2"
                    android:layout_weight="1"/>
            <RadioButton
                    android:text="@string/atv_feita_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioAtvFeitas3"
                    android:layout_weight="1"/>
            <RadioButton
                    android:text="@string/atv_feita_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioAtvFeitas4"
                    android:layout_weight="1"/>
            <RadioButton
                    android:text="@string/atv_feita_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioAtvFeitas5"
                    android:layout_weight="1"/>
            <RadioButton
                    android:text="@string/atv_feita_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioAtvFeitas6"
                    android:layout_weight="1"/>
          </RadioGroup>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center_vertical|center_horizontal">
          <TextView
                  android:text="@string/notas_das_atividades_prova_e_exame"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:textStyle="bold"/>
        </TableRow>
        <TableRow android:layout_height="match_parent"
                  android:layout_width="match_parent" android:gravity="center">
          <TableRow
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" android:orientation="vertical"
                  android:gravity="center_vertical|center_horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/atv_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/inputAtvNota1" android:hint="@string/nota_hint"
                    android:imeOptions="actionNext"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/atv_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/inputAtvNota2" android:hint="@string/nota_hint"
                    android:imeOptions="actionNext"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/atv_3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/inputAtvNota3" android:hint="@string/nota_hint"
                    android:imeOptions="actionNext"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/atv_4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/inputAtvNota4" android:hint="@string/nota_hint"
                    android:imeOptions="actionNext"/>
          </TableRow>
        </TableRow>
        <TableRow android:layout_height="match_parent"
                  android:layout_width="match_parent" android:gravity="center">
          <TableRow
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" android:orientation="vertical"
                  android:gravity="center_vertical|center_horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/atv_5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/inputAtvNota5" android:hint="@string/nota_hint"
                    android:imeOptions="actionNext"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/atv_6"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/inputAtvNota6" android:hint="@string/nota_hint"
                    android:imeOptions="actionNext"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prova"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@android:color/holo_red_dark"/>
            <EditText
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/inputAtvNotaProva" android:hint="@string/nota_hint"
                    android:imeOptions="actionNext"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/exame"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@android:color/holo_red_dark"/>
            <EditText
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/inputAtvNotaExame" android:hint="@string/nota_hint"
            />
          </TableRow>
        </TableRow>
      </TableLayout>
      <TableLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical" android:gravity="center">
          <Button
                  android:text="@string/calcular_media"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:id="@+id/btnCalcularMedia"
                  android:layout_marginEnd="10dp" android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp" android:layout_marginStart="10dp"
                  style="@style/Widget.AppCompat.Button.Colored"
                  android:onClick="btnCalcularMediaPressed"/>
          <Button
                  android:text="@string/limpar"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:id="@+id/btnLimpar"
                  android:layout_marginEnd="10dp" android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp" android:layout_marginStart="10dp"
                  style="@style/Widget.AppCompat.Button.Borderless.Colored"
                  android:onClick="btnLimparPressed"/>
        </TableRow>
      </TableLayout>
      <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="?android:attr/listDivider"
      />
      <TableLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical" android:gravity="center" android:paddingTop="10dp">
          <TextView
                  android:text="@string/nota_total_das_atividades"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingStart="2dp" android:textAlignment="textEnd"
                  android:paddingEnd="2dp"/>
          <TextView
                  android:text="@string/nota_hint"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/holo_blue_light"
                  android:textAlignment="textStart" android:paddingStart="2dp"
                  android:paddingEnd="2dp" android:id="@+id/notaTotalDeAtividades"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical" android:gravity="center"
        >
          <TextView
                  android:text="@string/nota_da_prova"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:paddingEnd="2dp"
                  android:paddingStart="2dp" android:textAlignment="textEnd"/>
          <TextView
                  android:text="@string/nota_hint"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/holo_blue_light"
                  android:textAlignment="textStart" android:paddingEnd="2dp"
                  android:paddingStart="2dp" android:id="@+id/notaDaProva"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical" android:gravity="center"
                  android:paddingBottom="10dp">
          <TextView
                  android:text="@string/nota_do_exame"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:paddingEnd="2dp"
                  android:paddingStart="2dp" android:textAlignment="textEnd"/>
          <TextView
                  android:text="@string/nota_hint"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/holo_blue_light"
                  android:textAlignment="textStart" android:paddingStart="2dp"
                  android:paddingEnd="2dp" android:id="@+id/notaDoExame"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical" android:gravity="center">
          <TextView
                  android:text="@string/media_das_atividades"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:paddingEnd="2dp"
                  android:paddingStart="2dp" android:textAlignment="textEnd"/>
          <TextView
                  android:text="@string/nota_hint"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/holo_blue_light"
                  android:textAlignment="textStart" android:paddingEnd="2dp"
                  android:paddingStart="2dp" android:id="@+id/mediaDasAtividades"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical" android:gravity="center"
                  android:paddingBottom="10dp">
          <TextView
                  android:text="@string/media_da_prova"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:paddingEnd="2dp"
                  android:paddingStart="2dp" android:textAlignment="textEnd"/>
          <TextView
                  android:text="@string/nota_hint"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/holo_blue_light"
                  android:textAlignment="textStart" android:paddingStart="2dp"
                  android:paddingEnd="2dp" android:id="@+id/mediaDaProva"/>
        </TableRow>
        <!--<TableRow android:layout_width="match_parent" android:layout_height="match_parent"-->
        <!--android:orientation="vertical" android:gravity="center"-->
        <!--android:paddingBottom="10dp">-->
        <!--<TextView-->
        <!--android:text="@string/media_do_exame"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" android:paddingEnd="2dp"-->
        <!--android:paddingStart="2dp" android:textAlignment="textEnd"/>-->
        <!--<TextView-->
        <!--android:text="@string/nota_hint"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textColor="@android:color/holo_blue_light"-->
        <!--android:textAlignment="textStart" android:paddingEnd="2dp"-->
        <!--android:paddingStart="2dp" android:id="@+id/mediaDoExame"/>-->
        <!--</TableRow>-->
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical" android:gravity="center"
                  android:paddingBottom="10dp">
          <TextView
                  android:text="@string/media_do_bimestre"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:paddingEnd="2dp"
                  android:paddingStart="2dp" android:textAlignment="textEnd"/>
          <TextView
                  android:text="@string/nota_hint"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/holo_blue_light"
                  android:textAlignment="textStart" android:paddingStart="2dp"
                  android:paddingEnd="2dp" android:id="@+id/mediaDoBimestre"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical" android:gravity="center">
          <TextView
                  android:text="@string/aprovado_reprovado_status"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAlignment="center"
                  android:textStyle="bold" android:textAllCaps="true" android:id="@+id/status"
                  android:textColor="@android:color/transparent" android:textSize="18sp"/>
        </TableRow>
      </TableLayout>
    </LinearLayout>

  </android.support.constraint.ConstraintLayout>
</ScrollView>